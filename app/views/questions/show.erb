<div class="content-background-color">

</div>

<div class="container">
	<div class="content">

		<div class="row justify-content-center">
			<div class="content-box col-9">
				<p><b><%= @question.title %></b></p>
				<p><%= @question.description %></p>

				<form action="/questions/<%= @question.id %>/question_votes?val=1" method="POST" class="vote-form-inline">
					<button type="submit" class="btn vote-btn">&#708;</button>
					<%= QuestionVote.where(question_id: @question.id, votes: true).count(:votes) %>
				</form>

				<form action="/questions/<%= @question.id %>/question_votes?val=0" method="POST" class="vote-form-inline">
					<button type="submit" class="btn vote-btn">&#709;</button>
					<%= QuestionVote.where(question_id: @question.id, votes: false).count(:votes) %>
				</form>

				<form action="/questions/<%= @question.id %>/answers" method="POST">

						<div class="form-group">
							<textarea rows="5" class="form-control" name="answer-description" placeholder="Enter answer here"></textarea>
						</div>

						<button type="submit" class="btn std-btn">Post</button>

				</form>

				<%= erb :'/questions/show_answers', :layout => false %>

			</div>
		</div>


	</div>
</div>